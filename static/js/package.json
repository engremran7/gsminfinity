{
  "name": "gsminfinity-enterprise-static",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ../src_css/main.css -o ../css/main.css --minify",
    "watch:css": "tailwindcss -i ../src_css/main.css -o ../css/main.css --watch",
    "bundle:js": "esbuild main.js consent.js consent-banner-loader.js htmx-csrf.js --bundle --minify --allow-overwrite --outdir=.",
    "build": "npm run build:css && npm run bundle:js"
  },
  "devDependencies": {
    "tailwindcss": "3.4.18",
    "postcss": "8.5.6",
    "autoprefixer": "10.4.22",
    "esbuild": "0.21.5"
  }
}
